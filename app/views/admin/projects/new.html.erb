<div class="container">
  
<h2>
  Add Project
</h2>

<%= render 'shared/errors', obj: @project %>

  <%= form_for @project, :url => url_for(:controller => 'admin/projects', :action => 'create'), :html => {class: "form-custom",} do |f| %>

    <div class="form-group">
      <%= f.label :title %> 
      <%= f.text_field :title, class: "form-control", autofoucs: true %>
  </div>

    <div class="form-group">
      <%= f.label :description %>
     
      <%= f.rich_text_area :description, class: "" %>
  </div>

<div class="form-group">
     <label>Project Link</label>
      <%= f.url_field :project_link, class: "form-control" %> 
   
  </div>
  <div class="form-group">
     <label>Project Image</label>
      <%= f.file_field :project_image, direct_upload: true, class: "form-control-file" %> 
   
  </div>


<div class="form-group">
	<%= f.label "Project Type" %>
    <%= f.collection_select(:project_type_id, ProjectType.all, :id, :name) %>
  </div>

  <p>
    <%= f.submit class: "btn btn-success"%>
  </p>

<% end %>

  
  </div>