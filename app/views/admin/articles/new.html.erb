
  <h2>
 Create an Article
</h2>


<%= render 'shared/errors', obj: @article %>

  <%= form_for @article, :url => url_for(:controller => 'admin/articles', :action => 'create'), :html => {class: "form-custom",} do |f| %>

    <div class="form-group">
      <%= f.label :title %> 
      <%= f.text_field :title, class: "form-control", autofoucs: true %>
  </div>

    <div class="form-group">
      <%= f.label :description %>
     
      <%= f.rich_text_area :description, class: "", id: "counted" %>
      
      <p>Current character count: <span id="char-count">0</span> / 10,000</p>
  </div>

<div class="form-group">
     <label>Featured Article?</label>
      <%= f.check_box :featured %> 
   
  </div>

<div class="form-group">
    <%= f.label :featured_image %><br>
    <%= f.file_field :featured_image, direct_upload: true, class: "form-control-file" %>
  </div>
<div class="form-group">
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>    
    <%= b.check_box %> <%= b.label %>
  <% end %>


   
  </div>

  <p>
    <%= f.submit class: "btn btn-success"%>
  </p>

<% end %>
  
<%= link_to 'Back to acticle listing', articles_path %> 

<script type="text/javascript">
    $(document).ready(function() {
      $('#char-count').html($('#counted').val().length);
    });

    $('#counted').keyup(function() {
      $('#char-count').html($(this).val().length);
    });
  </script>
  